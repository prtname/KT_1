<Window x:Class="KT_1.View.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KT_1.View"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel.Resources>
            <Style TargetType="TextBox">
                <Setter Property="MinWidth" Value="300"></Setter>
                <Setter Property="Height" Value="30"></Setter>
                <Setter Property="Margin" Value="0,10"></Setter>
            </Style>
        </StackPanel.Resources>

        <TextBlock TextAlignment="Center" FontSize="24" Margin="0,0,0,30">Вход</TextBlock>

        <TextBox Text="{Binding Login}"></TextBox>
        <TextBox Text="{Binding Password}"></TextBox>

        <Button Height="30" Margin="0,30,0,0" Command="{Binding AuthCommand}">Вход</Button>
    </StackPanel>
</Window>
